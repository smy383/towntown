rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 앱 설정 (버전 정보 등) - 누구나 읽기 가능
    match /app_config/{docId} {
      allow read: if true;
      allow write: if false; // Firebase Console에서만 수정
    }

    // 사용자 컬렉션 - 본인만 읽기/쓰기 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 주민 초대 컬렉션 (루트 레벨)
    match /membershipInvitations/{invitationId} {
      // 읽기: 로그인한 사용자
      allow read: if request.auth != null;
      // 생성/수정/삭제: 로그인한 사용자
      allow create, update, delete: if request.auth != null;
    }

    // 알림 컬렉션
    match /notifications/{notificationId} {
      // 읽기: 본인 알림만
      allow read: if request.auth != null
                  && resource.data.userId == request.auth.uid;
      // 생성: 로그인한 사용자
      allow create: if request.auth != null;
      // 수정/삭제: 본인 알림만
      allow update, delete: if request.auth != null
                            && resource.data.userId == request.auth.uid;
    }

    // 마을 컬렉션
    match /villages/{villageId} {
      // 누구나 읽기 가능 (지구본에 마을 표시)
      allow read: if request.auth != null;

      // 생성: 로그인한 사용자, ownerId가 본인일 때만
      allow create: if request.auth != null
                    && request.resource.data.ownerId == request.auth.uid;

      // 삭제: 마을 소유자만
      allow delete: if request.auth != null
                    && resource.data.ownerId == request.auth.uid;

      // 수정: 로그인한 사용자 (population, visitors 업데이트 허용)
      // 단, ownerId는 변경 불가
      allow update: if request.auth != null
                    && request.resource.data.ownerId == resource.data.ownerId;

      // 플레이어 서브컬렉션 (마을 내 접속자)
      match /players/{playerId} {
        // 읽기: 로그인한 사용자
        allow read: if request.auth != null;
        // 생성/수정: 본인만
        allow create, update: if request.auth != null
                              && request.auth.uid == playerId;
        // 삭제: 로그인한 사용자 (stale player cleanup 허용)
        allow delete: if request.auth != null;
      }

      // 주민 신청 서브컬렉션
      match /membershipRequests/{requestId} {
        // 읽기: 마을 주인 또는 신청자 본인
        allow read: if request.auth != null;
        // 생성: 로그인한 사용자 (신청자 본인)
        allow create: if request.auth != null
                      && request.resource.data.requesterId == request.auth.uid;
        // 수정/삭제: 마을 주인만
        allow update, delete: if request.auth != null;
      }

      // 주민 초대 서브컬렉션
      match /membershipInvitations/{invitationId} {
        // 읽기: 로그인한 사용자
        allow read: if request.auth != null;
        // 생성/수정/삭제: 로그인한 사용자
        allow create, update, delete: if request.auth != null;
      }

      // 집 서브컬렉션
      match /houses/{houseId} {
        // 읽기: 로그인한 사용자
        allow read: if request.auth != null;
        // 생성: 로그인한 사용자, 본인 소유의 집만
        allow create: if request.auth != null
                      && request.resource.data.ownerId == request.auth.uid;
        // 수정/삭제: 집 소유자만
        allow update, delete: if request.auth != null
                              && resource.data.ownerId == request.auth.uid;
      }
    }
  }
}
